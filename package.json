{
  "name": "ua-tracker",
  "scripts": {
    "dev": "bun --watch server.ts",
    "start": "bun server.ts",
    "scrape": "bun run scrape.ts",
    "scrape-fr24": "PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers bun run src/scripts/flightradar24-scraper.ts",
    "update-flights": "bun -e \"import('./src/api/flight-updater.ts').then(m => m.updateAllFlights())\"",
    "check-starlink": "PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers bun run src/scripts/united-starlink-checker.ts",
    "verify-starlink": "PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers bun run src/scripts/starlink-verifier.ts",
    "sync-fleet": "PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers bun run src/scripts/fleet-sync.ts",
    "discover": "PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers bun run src/scripts/fleet-discovery.ts",
    "discover-stats": "bun run src/scripts/fleet-discovery.ts --stats",
    "install-browser": "PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers bunx playwright install chromium",
    "db-status": "bun run src/scripts/db-status.ts",
    "reset-flights": "bun run src/scripts/reset-flight-checks.ts",
    "lint": "biome check .",
    "format": "biome format --write .",
    "lint:fix": "biome check --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "dd-trace": "^5.32.0",
    "dotenv": "^16.6.1",
    "playwright": "^1.57.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": ["biome check --write"]
  }
}
