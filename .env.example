# Server
PORT=3000
NODE_ENV=development

# Flight data: "flightradar24" (free) or "flightaware" (paid)
FLIGHT_DATA_SOURCE=flightradar24
# AEROAPI_KEY=your_key_here

# Playwright browsers
PLAYWRIGHT_BROWSERS_PATH=./.playwright-browsers

# Logs (use persistent mount in prod)
LOG_DIR=./logs

# Datadog APM (disabled by default for local dev)
DD_TRACE_ENABLED=false

# Required when DD_TRACE_ENABLED=true
DD_ENV=development
DD_SERVICE=ua-starlink-tracker
# DD_VERSION=1.0.0  # Defaults to git commit hash

# Agent connection (defaults shown)
# DD_TRACE_AGENT_HOSTNAME=localhost
# DD_TRACE_AGENT_PORT=8126
# DD_DOGSTATSD_PORT=8125
